<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context=".Partie">


            <TextView
                android:id="@+id/textview_Coordonnees_Goals"
                android:layout_width="128dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:text="Position Ã  atteindre:"
                app:layout_constraintBottom_toTopOf="@id/textview_XCoordonnees_Goals"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_XCoordonnees_Goals"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="0sp"
                android:text="X :" />

    <TextView
        android:id="@+id/goal_X"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginStart="30sp" />

    <TextView
                android:id="@+id/textview_YCoordonnees_Goals"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:text="Y :" />
            <TextView
                android:id="@+id/goal_Y"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="30sp"/>

            <TextView
                android:id="@+id/textview_Coordonnees_Current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Position actuelle:"
                app:layout_constraintBottom_toTopOf="@id/textview_XCoordonnees_Current"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_YCoordonnees_Goals"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textview_XCoordonnees_Current"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="0sp"
                android:text="X :"/>
            <TextView
                android:id="@+id/current_X"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="30sp"/>

            <TextView
                android:id="@+id/textview_YCoordonnees_Current"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="0sp"
                android:text="Y :"/>
            <TextView
                android:id="@+id/current_Y"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginStart="30sp"/>

            <Button
                android:id="@+id/b_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />



    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintTop_toBottomOf="@id/b_refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</LinearLayout>