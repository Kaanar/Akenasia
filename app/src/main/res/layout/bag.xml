<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".openworld.Bag">

    <RadioGroup
        android:id="@+id/radioGroupBag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/BagEpee"
            app:layout_constraintBottom_toTopOf="@+id/ListViewItemForge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Epee"
            android:textSize="16sp"
            android:checked="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            tools:layout_editor_absoluteY="120dp"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/BagBouclier"
            app:layout_constraintBottom_toTopOf="@+id/ListViewItemForge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bouclier"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/CBEpee"
            android:layout_marginBottom="30dp"
            tools:layout_editor_absoluteY="120dp"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/BagChaussures"
            app:layout_constraintBottom_toTopOf="@+id/ListViewItemForge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chaussures"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/CBBouclier"
            android:layout_marginBottom="30dp"
            tools:layout_editor_absoluteY="120dp"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/BagArmure"
            app:layout_constraintBottom_toTopOf="@+id/ListViewItemForge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Armure"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/CBChaussures"
            android:layout_marginBottom="30dp"
            tools:layout_editor_absoluteY="120dp"
            tools:ignore="MissingConstraints" />
    </RadioGroup>

    <ListView
        android:id="@+id/ListViewItem"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/NavigationView"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupBag"
        tools:ignore="MissingConstraints"
        android:layout_height="600dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/NavigationView"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:menu="@menu/menu_navigateur" />

</androidx.constraintlayout.widget.ConstraintLayout>