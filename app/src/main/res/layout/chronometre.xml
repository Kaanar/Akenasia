<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context=".Game">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="35dp"
        android:elevation="19dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/shape_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Chronomètre"
            android:gravity="center"
            android:padding="6dp"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:elevation="15dp"
            android:background="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Chronometer
            android:id="@+id/chronoMterPlay"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_background"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ChresultTV"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/ChPosGoalTv"
        android:layout_width="128dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="Position à atteindre:"
        app:layout_constraintBottom_toTopOf="@id/textview_XCoordonnees_Goals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ChXGoalTv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="0sp"
        android:layout_gravity="center"
        android:text="X :" />

    <TextView
        android:id="@+id/Chgoal_X"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/ChYGoalTv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="Y :" />

    <TextView
        android:id="@+id/Chgoal_Y"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="30sp" />


    <TextView
        android:id="@+id/ChPosCurTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Position actuelle:"
        app:layout_constraintBottom_toTopOf="@id/textview_XCoordonnees_Current"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_YCoordonnees_Goals"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/ChXCurTv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="0sp"
        android:layout_gravity="center"
        android:text="X :"/>

    <TextView
        android:id="@+id/Chcurrent_X"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/ChYCurTv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="0sp"
        android:text="Y :"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/Chcurrent_Y"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/ChessaisTV"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginStart="30sp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/ChRefreshBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"/>



    <Button
        android:id="@+id/ChQuitGameBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintTop_toBottomOf="@id/b_refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</LinearLayout>