<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtUplevel1"
        android:layout_width="317dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:text="Vous venez de changer de niveau, que vous voulez améliorer : vos points de vie, vos points d'attaque, ou vos points de défense ?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUpLevel2"
        android:layout_width="358dp"
        android:layout_height="110dp"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:text="Félicitation, vous pouvez vérifier l'augmentation dans vos stats !"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpLevelAttaque"
        app:layout_constraintVertical_bias="0.214" />

    <Button
        android:id="@+id/btnUpLevelHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="HP +"
        app:layout_constraintBottom_toTopOf="@+id/btnUpLevelAttaque"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUplevel1"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/btnUpLevelAttaque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:text="Attaque +"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUplevel1" />

    <Button
        android:id="@+id/btnUpLevelDefense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="40dp"
        android:text="Défense + "
        app:layout_constraintBottom_toTopOf="@+id/txtUpLevel2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpLevelAttaque" />


</androidx.constraintlayout.widget.ConstraintLayout>