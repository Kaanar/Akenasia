<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_Coordonnees_Goals"
            android:layout_width="128dp"
            android:layout_height="20dp"
            android:layout_marginTop="25dp"
            android:text="Position Ã  atteindre:"
            app:layout_constraintBottom_toTopOf="@id/textview_XCoordonnees_Goals"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_XCoordonnees_Goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="X:"
            app:layout_constraintBottom_toTopOf="@id/textview_Coordonnees_Current"
            app:layout_constraintEnd_toStartOf="@+id/textview_XCoordonnees_Goals_Value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Goals"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" />
        <TextView
            android:id="@+id/textview_XCoordonnees_Goals_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="start"
            android:width="150dp"
            app:layout_constraintBottom_toTopOf="@id/textview_Coordonnees_Current"
            app:layout_constraintEnd_toStartOf="@+id/textview_YCoordonnees_Goals"
            app:layout_constraintStart_toEndOf="@id/textview_XCoordonnees_Goals"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Goals"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textview_YCoordonnees_Goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Y "
            app:layout_constraintBottom_toTopOf="@id/textview_Coordonnees_Current"
            app:layout_constraintEnd_toStartOf="@+id/textview_YCoordonnees_Goals_Value"
            app:layout_constraintStart_toEndOf="@+id/textview_XCoordonnees_Goals_Value"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Goals"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/textview_YCoordonnees_Goals_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="start"
            android:width="150dp"
            app:layout_constraintBottom_toTopOf="@id/textview_Coordonnees_Current"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_YCoordonnees_Goals"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Goals"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textview_Coordonnees_Current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Position actuelle:"
            app:layout_constraintBottom_toTopOf="@id/textview_XCoordonnees_Current"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_YCoordonnees_Goals"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textview_XCoordonnees_Current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="X :"
            app:layout_constraintBottom_toTopOf="@id/button_first"
            app:layout_constraintEnd_toStartOf="@+id/textview_XCoordonnees_Current_Value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Current"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" />
        <TextView
            android:id="@+id/textview_XCoordonnees_Current_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="start"
            android:width="150dp"
            app:layout_constraintBottom_toTopOf="@id/button_first"
            app:layout_constraintEnd_toStartOf="@+id/textview_YCoordonnees_Current"
            app:layout_constraintStart_toEndOf="@id/textview_XCoordonnees_Current"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Current"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textview_YCoordonnees_Current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Y :"
            app:layout_constraintBottom_toTopOf="@id/button_first"
            app:layout_constraintEnd_toStartOf="@+id/textview_YCoordonnees_Current_Value"
            app:layout_constraintStart_toEndOf="@+id/textview_XCoordonnees_Current_Value"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Goals"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/textview_YCoordonnees_Current_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:width="150dp"
            android:gravity="start"
            app:layout_constraintBottom_toTopOf="@id/button_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_YCoordonnees_Goals"
            app:layout_constraintTop_toBottomOf="@id/textview_Coordonnees_Goals"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            app:layout_constraintTop_toBottomOf="@id/textview_YCoordonnees_Goals_Value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>